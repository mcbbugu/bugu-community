    <select id="findQuestionByTag" resultType="com.bugu.bgcommunity.core.model.dto.QuestionDTO">
        select q.id, q.title, q.view_count, q.user_id,
        q.tags, q.comment_count, q.agree_count, q.gmt_create, u.avatar_url
        from question q
        left join user u
        on q.user_id = u.id
        <where>
            <if test="tag != '' and tag != null">
                q.tags = #{tag}
            </if>
        </where>
        order by ${sort} desc
    </select>
</mapper>